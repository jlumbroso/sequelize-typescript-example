{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "sourceMap": true,

    /* Both options are required by sequelize-typescript */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "files": [
    "./node_modules/@types/sequelize/index.d.ts",
    "./node_modules/@types/sqlite3/index.d.ts",
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "./config/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
